{{ header }}

<div class="container" id="aboutDuxback">

    <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
            <li>
                <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
            </li>
        {% endfor %}
    </ul>


    <div class="row">{{ column_left }}
        {% if column_left and column_right %}
            {% set class = 'col-sm-6' %}
        {% elseif column_left or column_right %}
            {% set class = 'col-sm-9' %}
        {% else %}
            {% set class = 'col-sm-12' %}
        {% endif %}

        <div id="content" class="{{ class }}">
            {{ content_top }}

            <div class="modal-body row">
                <div class="col-md-4">
                    <h1>{{ about_title }}</h1>
                    <hr>
                    <div class="text-content text-justify">
                        {{ about_content }}
                    </div>
                </div>
                <div class="col-md-4">
                    <h1>{{ testimonials_title }}</h1>
                    <hr>

                    <p class="text-content text-justify">{{ testimonials_content }}</p>
                    <p class="text-primary text-center"><strong>Miss P East, Kent, Ford Fiesta</strong></p>
                </div>
                <div class="col-md-4">
                    <h1 class="text-center">{{ action_title }}</h1>

                    <img class="img-responsive img-thumbnail" style="width: 100%;" src="{{ img1 }}" alt="About img1">
                    <br><br>
                    <img class="img-responsive img-thumbnail" style="width: 100%;" src="{{ img2 }}" alt="About img1">
                </div>
            </div>

            {{ content_bottom }}
        </div>
        {{ column_right }}
    </div>
</div>
{{ footer }}