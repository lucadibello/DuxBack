{{ header }}

<div class="container" id="contactus">
    <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
            <li>
                <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
            </li>
        {% endfor %}
    </ul>

    <div class="row">{{ column_left }}
        {% if column_left and column_right %}
            {% set class = 'col-sm-6' %}
        {% elseif column_left or column_right %}
            {% set class = 'col-sm-9' %}
        {% else %}
            {% set class = 'col-sm-12' %}
        {% endif %}
        <div id="content" class="{{ class }}">
            {{ content_top }}
            <h1>{{ heading_title }}</h1>

            <form class="form-horizontal" action="index.php?route=information/contactus" method="post">
                <div id="personal-informations">
                    <div class="form-group">
                        <label for="inputName">Your name</label>
                        <input type="email" class="form-control" name="firstname" id="inputName" placeholder="Example: Luke">
                    </div>

                    <div class="form-group">
                        <label for="inputSurname">Your surname</label>
                        <input type="email" class="form-control" name="lastname" id="inputSurname" placeholder="Example: Skywalker">
                    </div>

                    <div class="form-group">
                        <label for="inputMailFrom">Email</label>
                        <input type="email" class="form-control" name="mailFrom" id="inputMailFrom" placeholder="name@example.com">
                    </div>
                </div>

                <div id="Message">
                    <div class="form-group">
                        <label for="inputMessageType">Type</label>
                        <select class="form-control" id="inputMessageType" name="messageType">
                            <option>Information</option>
                            <option>Bug report</option>
                            <option>Other</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="inputMessageBody">Message</label>
                        <textarea class="form-control" id="inputMessageBody" rows="4" name="messageBody"></textarea>
                    </div>
                </div>

                <div class="form-group text-black">
                    <button type="submit">Send message</button>
                </div>
            </form>
            {{ content_bottom }}
        </div>
        {{ column_right }}
    </div>
</div>
{{ footer }}
